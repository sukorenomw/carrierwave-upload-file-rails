<%= form_for @image, :html => {:class => "form-horizontal", :role => "form", :multipart => true} do |f| %>
	<div class="form-group">
		<%= f.label :title, "Title:", class: "col-sm-2 control-label" %>
		<div class="col-sm-5">
			<%= f.text_field :title, {:class => "form-control", :required => "required", :placeholder => "Image title .."} %>
		</div>
		<% if @image.errors[:title].any? %>
		<div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
			<div class="alert alert-danger" style="padding:1%; padding-left:3%; margin:0;">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> title <%= @image.errors[:title].first unless @image.errors[:title].blank? %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.label :image, "Select Image :", class: "col-sm-2 control-label" %>
		<div class="col-sm-5">
			<div class="fileinput fileinput-new" data-provides="fileinput">
			  <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"><%= image_tag @image.image if @image.image? %></div>
			  <div>
			    <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span>
			    <%= f.file_field :image %></span>
			    <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
			  </div>
			</div>
		</div>
		<% if @image.errors[:image].any? %>
		<div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
			<div class="alert alert-danger" style="padding:1%; padding-left:3%; margin:0;">
				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
				<strong>Error!</strong> image <%= @image.errors[:image].first unless @image.errors[:image].blank? %>
			</div>
		</div>
		<% end %>
	</div>
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<%= f.submit "Submit", class: "btn btn-default btn-primary" %> 
		</div>
	</div>
<% end %>